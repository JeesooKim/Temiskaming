@model Temiskaming.Models.news

@{
    ViewBag.Title = "newsinsert";
}


@*import files necessary to CKEditor*@
<script type="text/javascript" src="@Url.Content("~/content/ckeditor/ckeditor.js")"></script>
<script type="text/javascript" src="@Url.Content("~/content/ckeditor/adapters/jquery.js")"></script>
<h2>Publish News Article</h2>


@using (Html.BeginForm())
{
    
    @Html.ValidationSummary()
    
    @Html.LabelFor(x=>x.title)
    <br/>
    @Html.TextBoxFor(x => x.title)
    @Html.ValidationMessageFor(x=>x.title)
    <br/><br/>
    
    @Html.LabelFor(x=>x.content)
    <br/>
    @Html.TextAreaFor(x => x.content, new { @class = "adminRichText" }) @*Create a new class for the text area*@
    @Html.ValidationMessageFor(x=>x.content)

    <br/><br/>
    
    <input type="submit" value="Publish"/>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

<script language="javascript" type="text/javascript">
    jQuery(".adminRichText").ckeditor(); @*replace the text area with CKEDitor*@
</script>
