@model IEnumerable<Temiskaming.Models.FAQ>
@{
    ViewBag.Title = "index";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script>
    $(function () {
        $("#accordion").accordion({
            collapsible: true,
            heightStyle: "content",
            active: false
        });
    });
</script>


<h2>FAQ</h2>

<div>
    <!-- search textbox using string input to sql statement where-->
    @using (Html.BeginForm("Index", "FAQ", FormMethod.Get))
    {
        <p>
            Search: @Html.TextBox("SearchString")
            <input type="submit" value="search" />
        </p>
    }
</div>


<!--display for question-->

<div id="display">
    <div id="accordion">
        @foreach (var x in Model)
        {
            <h3>Question: @Html.DisplayFor(model => x.Question)</h3>
            <div>
                <h3>
                    Answer: @Html.DisplayFor(model => x.Answer)
                </h3>

            </div>
        }
    </div>

</div>