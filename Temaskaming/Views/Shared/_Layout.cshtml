<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,700,700italic' rel='stylesheet' type='text/css'>
    
   
    @RenderSection("css", false)
    @if (Session["email"] != null)
    {
        <style>#chat {display: block;}</style>
    }
</head>
<body>
    
        <header>
            <div id="hwrapper">
                <div id="logo">

                </div>
                <nav>
                    <ul>
                        @{Html.RenderAction("Nav", "Home", new { group = "Home" });}
                        @*Uses partial views to render dynamic menu*@
                    </ul>
                </nav>
            </div>
        </header>
    <div id="wrapper">
        <div class="menu">
            
            @if (ViewBag.Group != null)
            {
                <div id="menuIcon">
                    
                </div>
            <nav>
                @{Html.RenderAction("Nav", "Home", new { group = ViewBag.Group });}
            </nav>
            }
        </div>
        <div id="container">
            @if (ViewBag.Group == "Admin")
            {
                
                <div id="adminContent">
                    @Html.Partial("_LoginPartial")
                    @RenderBody()
                </div>
            }
            else { 
            <div id="content">
                @RenderBody()
            </div>
            }
            @if (ViewBag.Group != "Admin")
            {
            <aside>
                <div id="alertBox">
                    <h2>Alert</h2>
                    <div id="alert">

                    </div>
                </div>
                
                <div id="giftBox">
                    <h2>Gift Shop</h2>
                </div>
                <div id="donateBox">
                    <h2>@Html.ActionLink("Donate", "Index", "Donation")</h2>
                </div>
                <div id="appointBox">
                    <h2>Book an Appointment</h2>
                </div>
                <div id="chatBox">

                    <h2><a>Live Chat</a></h2>
                    <div id="chat">
                        @{Html.RenderAction("Index", "Chat");
                            if (Session["email"] != null)
                            {
                                @Scripts.Render("~/bundles/jqueryval");
                            }
                        }
                    </div>

                </div>

            </aside>   
            }
        </div>
    </div>
        <footer>
            <div id="fwrapper">
                <nav>
                    <ul>
                        <li><a href="#">Newsletter Signup</a></li>
                        <li><a href="#">Survey</a></li>
                        <li>@Html.ActionLink("FAQ", "FAQ", "FAQ")</li>
                        <li><a href="#">Site Map</a></li>
                        <li>@Html.ActionLink("Admin", "Admin", "Home")</li>
                    </ul>
                </nav>
                
            </div>
        </footer>
    
        @RenderSection("scripts", required: false)
</body>
</html>
