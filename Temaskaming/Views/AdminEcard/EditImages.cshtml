@model IEnumerable<Temiskaming.Models.ecardimage>
@{
    ViewBag.Title = "Edit images";
}
<p>@Html.ActionLink("Go back to viewing Ecards", "AdminShowEcards", "AdminEcard")</p>

<form action="" method="post" enctype="multipart/form-data">
    <table class="upload_img">
        <tr>
            <td>
                <label for="file">Choose a file to add:</label>
            </td>
            <td>
                <input type="file" name="file" id="file" />
            </td>
            <td>
                <input type="submit" value="Add" />
            </td>
        </tr>
    </table>
</form>

@foreach (var x in Model)
{
    <div class="delete_image">
        <div class="thumb3" style="background-image:url('@Url.Content(x.urlpath)')"></div>
        @Html.ActionLink("Delete", "DeleteImage", new { id = x.Id })
    </div>
}
