@model Temiskaming.Models.staff

@{
    ViewBag.Title = "Admin_staffDetails";
}

<h2>Admin - Details for @Html.DisplayFor(x => x.staff_fname) @Html.DisplayFor(x => x.staff_lname)</h2>

@Html.ActionLink("To Admin-Department List", "DirectoryAdmin")
<br /><hr />

<table>
    <tr>
        <td>Position:</td>
        <td>@Html.DisplayFor(x => x.staff_position)</td>
    </tr>
    <tr>
        <td>Phone:</td>
        <td>@Html.DisplayFor(x => x.staff_phone)</td>
    </tr>
    <tr>
        <td>Extension:</td>
        <td>@Html.DisplayFor(x => x.staff_ext)</td>
    </tr>
    <tr>
        <td>Email:</td>
        <td>@Html.DisplayFor(x => x.staff_email)</td>
    </tr>
    <tr>
        <td>Department:</td>
        <td>
            @{
                switch (Model.staff_departmentId)
                {
                    case 1:
                        // Use the text block below to separate html elements from code
                        <text>Senior Management</text>
                        break;  // Always break each case
                    case 2:
                    <text>Physicians</text>
                        break;
                    case 3:
                    <text>Nursing</text>
                        break;
                    case 4:
                    <text>Midwives</text>
                        break;
                    case 5:
                    <text>Human Resources</text>
                        break;
                    case 6:
                    <text>Patients Relations</text>
                        break;
                    case 7:
                    <text>Volunteer</text>
                        break;
                    case 8:
                    <text>Finances</text>
                        break;
                    case 9:
                    <text>Website Technical Support</text>
                        break;
                    case 10:
                    <text>Maintenance</text>
                        break;
                    case 11:
                    <text>Physician Recruitment</text>
                        break;
                    default:
                    <text></text>
                        break;
                }
            }            
        </td>        
    </tr>
</table>

<p>
@Html.ActionLink("Back to Staff List", "DirectoryAdmin_Staff", "Directory")
&nbsp;|&nbsp;
@Html.ActionLink("Update", "Admin_staffUpdate", new { id = Model.staff_id })
&nbsp; | &nbsp;
@Html.ActionLink("Delete", "Admin_staffDelete", new { id = Model.staff_id })
</p>

