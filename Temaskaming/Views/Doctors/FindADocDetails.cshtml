@model Temiskaming.Models.doctor

@{
    ViewBag.Title = "Dr." + @Model.lname;
}

<h2>Find A Doctor -ADMIN </h2>

<h2>Details for Dr. @Html.DisplayFor(x => x.lname) , @Html.DisplayFor(x => x.fname) </h2>
<hr />
<h3>@Html.DisplayFor(x => x.title)</h3>



<table>
    <tr>
        <td>Status:</td>
        <td> @Html.DisplayFor(x => x.status)</td>
    </tr>
    <tr>
        <td>Department:</td>
        <td> @Html.DisplayFor(x => x.department)</td>
    </tr>
    <tr>
        <td>Special role:</td>
        <td> @Html.DisplayFor(x => x.role)</td>
    </tr>
    <tr>
        <td>Program involved: </td>
        <td>@Html.DisplayFor(x => x.program)</td>
    </tr>

    <tr>
        <td>Office: Room# </td>
        <td>@Html.DisplayFor(x => x.office)</td>
    </tr>
    <tr>
        @*<td>@Html.DisplayNameFor(x => x.office_hr): </td>*@
        <td>Office Hour: </td>
        <td>@Html.DisplayFor(x => x.office_hr)</td>
    </tr>
    <tr>
        <td>Phone: </td>
        <td>@Html.DisplayFor(x => x.phone)</td>
    </tr>
    <tr>
        <td>Extension: </td>
        <td>@Html.DisplayFor(x => x.extension)</td>
    </tr>
    <tr>
        <td>Email:</td>
        <td>@Html.DisplayFor(x => x.email)</td>
    </tr>
</table>
<br/>

<fieldset>
    <legend>Brief Bio</legend>
    @Html.DisplayFor(x => x.bio)
</fieldset>

<p>
    @Html.ActionLink("Back to List", "FindADocAdmin", "Doctors")
    &nbsp;&nbsp;|&nbsp;&nbsp;
    @Html.ActionLink("Update", "FindADocUpdate", new { id = @Model.Id })
    &nbsp;&nbsp;|&nbsp;&nbsp;
    @Html.ActionLink("Delete", "FindADocDelete", new { id = @Model.Id })</p>
    

