{
    @Html.HiddenFor(x => x.Id)



    @Html.LabelFor(x => x.fname)
    <br />
    @Html.TextBoxFor(x => x.fname)
    @Html.ValidationMessageFor(x => x.fname)
    <br /><br />

    @Html.LabelFor(x => x.lname)
    <br />
    @Html.TextBoxFor(x => x.lname)
    @Html.ValidationMessageFor(x => x.lname)
    <br /><br />

    @Html.LabelFor(x => x.status)
    <br />
    @Html.TextBoxFor(x => x.status)
    @Html.ValidationMessageFor(x => x.status)
    <br /><br />

    @Html.LabelFor(x => x.title)
    <br />
    @Html.TextBoxFor(x => x.title)
    @Html.ValidationMessageFor(x => x.title)
    <br /><br />

    @Html.LabelFor(x => x.department)
    <br />
    @Html.TextBoxFor(x => x.department)
    @Html.ValidationMessageFor(x => x.department)
    <br /><br />

    @Html.LabelFor(x => x.role)
    <br />

    @Html.TextBoxFor(x => x.role)
    @Html.ValidationMessageFor(x => x.role)
    <br /><br />

    @Html.LabelFor(x => x.program)
    <br />

    @Html.TextBoxFor(x => x.program)
    @Html.ValidationMessageFor(x => x.program)
    <br /><br />


    @Html.LabelFor(x => x.email)
    <br />

