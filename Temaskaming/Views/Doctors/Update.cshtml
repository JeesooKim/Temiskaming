@model Temiskaming.Models.doctor

@{
    ViewBag.Title = "Update Doctor: " + @Model.lname;
}

@{
    ViewBag.Heading = "Admin-Update Doctors";
}


<div class="sub_heading">
    <h2>Update: @Model.fname  @Model.lname</h2>
</div>

