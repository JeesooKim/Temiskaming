    @Html.TextAreaFor(x => x.bio)
    @Html.ValidationMessageFor(x => x.bio)
    <br /><br />

    <input type="submit" value="Update" />
}

<p>
    @Html.ActionLink("Back to details", "Details", new { id = Model.Id })
</p>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


