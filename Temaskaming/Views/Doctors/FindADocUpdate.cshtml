@model Temiskaming.Models.doctor

@{
    ViewBag.Title = "Update Doctor: " + @Model.lname;
}

<h2>Update A Doctor - Admin :@Model.fname  @Model.lname </h2>
<br />
* Required
<br /><br />

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)
    @Html.ValidationSummary()

    <table>
        <tbody>
            <tr>
                <td>@Html.LabelFor(x => x.fname)*</td>
                <td>@Html.TextBoxFor(x => x.fname)</td>
                <td>@Html.ValidationMessageFor(x => x.fname, "*")</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.lname)* </td>
                <td>@Html.TextBoxFor(x => x.lname)</td>
                <td>@Html.ValidationMessageFor(x => x.lname, "*")</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.status)</td>
                <td>
                    @Html.DropDownListFor(model => model.status, new[] {
                            new SelectListItem(){Text ="Choose" ,Value = ""},
                            new SelectListItem(){Text="ACTIVE", Value= "ACTIVE"},
                            new SelectListItem(){Text="Associate", Value="Associate"},
                            new SelectListItem(){Text="Courtesy", Value="Courtesy"},
                            new SelectListItem(){Text="LOCUM TENENS", Value="LOCUM TENENS"},
                            //new SelectListItem(){Text="", Value=""}
                            })
                </td>
                @*<td>@Html.ValidationMessageFor(x => x.status)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.title)*  </td>
                <td>@Html.TextBoxFor(x => x.title)</td>
                <td>@Html.ValidationMessageFor(x => x.title, "*")</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.department)* </td>
                <td>@Html.TextBoxFor(x => x.department)</td>
                <td>@Html.ValidationMessageFor(x => x.department, "*")</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.role)</td>
                <td>@Html.TextBoxFor(x => x.role)</td>
                @*@Html.ValidationMessageFor(x => x.role)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.program)</td>
                <td>@Html.TextBoxFor(x => x.program)</td>
                @*@Html.ValidationMessageFor(x => x.program)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.email)*</td>
                <td>@Html.TextBoxFor(x => x.email)</td>
                <td>@Html.ValidationMessageFor(x => x.email, "*")</td>               
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.extension)*</td>
                <td>@Html.TextBoxFor(x => x.extension)</td>
                <td>@Html.ValidationMessageFor(x => x.extension, "*")</td>               
            </tr>

            <tr>
                <td>@Html.LabelFor(x => x.phone)*</td>
                <td>@Html.TextBoxFor(x => x.phone)</td>
                <td>@Html.ValidationMessageFor(x => x.phone, "*")</td>                
            </tr>


            <tr>
                <td>@Html.LabelFor(x => x.office)</td>
                <td>@Html.TextBoxFor(x => x.office)</td>
                @*<td>
                    @Html.ValidationMessageFor(x => x.office)
                </td>*@
            </tr>

            <tr>
                <td>@Html.LabelFor(x => x.office_hr)</td>
                <td>@Html.TextBoxFor(x => x.office_hr)</td>
                @*<td>
                    @Html.ValidationMessageFor(x => x.office_hr)
                </td>*@
            </tr>

            <tr>
                <td>@Html.LabelFor(x => x.bio)</td>
                <td>@Html.TextAreaFor(x => x.bio)</td>
                @*<td>
                    @Html.ValidationMessageFor(x => x.bio)
                </td>*@
            </tr>
        </tbody>
    </table><br />
    <input type="submit" value="Update" />
}


<p>
    @Html.ActionLink("Back to Details", "FindADocDetails", new { id = Model.Id })
    &nbsp;&nbsp;|&nbsp;&nbsp;
@Html.ActionLink("Back to List", "FindADocAdmin")
</p>


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

