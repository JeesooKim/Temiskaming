@model Temiskaming.Models.Order

@{
    ViewBag.Title = "Purchase";
}

<h2>Purchase</h2>

@using (Html.BeginForm())
{
    <div>
        @Html.HiddenFor(model =>model.OrderId)
       @Html.HiddenFor(model => model.itemId, new { @Value = ViewBag.PassItem})
        @Html.LabelFor(model=>model.itemId)
        @ViewBag.PassItem; 
    </div>
    <div>
        @Html.LabelFor(model => model.FirstName, "First Name")
        @Html.TextBoxFor(model => model.FirstName)
        @Html.ValidationMessageFor(Model => Model.FirstName, "*")
    </div>

    <div>
        @Html.LabelFor(model => model.LastName, "Last Name")
        @Html.TextBoxFor(model => model.LastName)
        @Html.ValidationMessageFor(Model => Model.LastName, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.Phone)
        @Html.TextBoxFor(model => model.Phone)
        @Html.ValidationMessageFor(Model => Model.Phone, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email)
        @Html.ValidationMessageFor(Model => Model.Email, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.Address)
        @Html.TextBoxFor(model => model.Address)
        @Html.ValidationMessageFor(Model => Model.Address, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.City)
        @Html.TextBoxFor(model => model.City)
        @Html.ValidationMessageFor(Model => Model.City, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.Province)
        @Html.TextBoxFor(model => model.Province)
        @Html.ValidationMessageFor(Model => Model.Province, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.PostalCode,"Postal Code")
        @Html.TextBoxFor(model => model.PostalCode)
        @Html.ValidationMessageFor(Model => Model.PostalCode, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.Country)
        @Html.TextBoxFor(model => model.Country)
        @Html.ValidationMessageFor(Model => Model.Country, "*")
    </div>
    <hr/>
    <div>
        @Html.LabelFor(model => model.ToPatient, "To Patient")
        @Html.TextBoxFor(model => model.ToPatient)
        @Html.ValidationMessageFor(Model => Model.ToPatient, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.From)
        @Html.TextBoxFor(model => model.From)
        @Html.ValidationMessageFor(Model => Model.From, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.Message)
        @Html.TextAreaFor(model => model.Message)
        @Html.ValidationMessageFor(Model => Model.Message, "*")
    </div>
    <div>
        @Html.LabelFor(model => model.OrderDate, "When To deliver to the Patient")
        @Html.TextBoxFor(model => model.OrderDate)
        @Html.ValidationMessageFor(Model => Model.OrderDate, "*")
    </div>
    <input type="submit" value="Submit"/>
}