@model Temiskaming.Models.jobValidation

@{
    ViewBag.Title = "Insert new job posting";
}

<h2>Insert New Job Posting</h2>
@Html.ActionLink("Go back to all Job Postings", "AdminShowJobPostings", "AdminJobPostings")

@* form with controls and validation for them which adds new job posting *@
@using (Html.BeginForm())
{
    <table class="job_post_form">
        <tr>
            @*label, textbox and validation message for jobtitle *@
            <th>
                @Html.LabelFor(model => model.jobtitle)
            </th>
            <td>
                @Html.TextBoxFor(model => model.jobtitle, new { @class = "jobform" })
                @Html.ValidationMessageFor(model => model.jobtitle, "*")
            </td>
        </tr>
        <tr>
            @*label, textarea and validation message for jobdescription *@
            <th>
                @Html.LabelFor(model => model.jobdescr)
            </th>
            <td>
                @Html.TextAreaFor(model => model.jobdescr)
                @Html.ValidationMessageFor(model => model.jobdescr, "*")
            </td>
        </tr>
        <tr>
            @*label, textbox and validation message for posted date *@
            <th>
                @Html.LabelFor(model => model.posteddate)
            </th>
            <td>
                @Html.TextBoxFor(model => model.posteddate, new { @class = "jobform" })
                @Html.ValidationMessageFor(model => model.posteddate, "*")
            </td>
        </tr>
        <tr>
            @*label, textbox and validation message for qualifications *@
            <th>
                @Html.LabelFor(model => model.qualifications)
            </th>
            <td>
                @Html.TextBoxFor(model => model.qualifications, new { @class = "jobform" })
                @Html.ValidationMessageFor(model => model.qualifications, "*")
            </td>
        </tr>
        <tr>
            @*label, textbox and validation message for duration *@
            <th>
                @Html.LabelFor(model => model.duration)
            </th>
            <td>
                @Html.TextBoxFor(model => model.duration, new { @class = "jobform" })
                @Html.ValidationMessageFor(model => model.duration, "*")
            </td>
        </tr>
        <tr>
            <td></td>
            <td style="text-align:right"><input type="submit" value="Create New" /></td>
        </tr>
    </table>
    @* submit button for inserting new job posting *@
    <br /> <br />
    @Html.ValidationSummary()
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

