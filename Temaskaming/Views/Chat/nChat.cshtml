@model IEnumerable<Temiskaming.Models.chat>

@{
    ViewBag.Title = "Temiskaming - Nurse Chat";
    @section css{
        @Styles.Render("~/content/nchat.css")
    }
}

<h2>Nurse Live Chat</h2>
<p>Reload page to see new chats started by visitors.</p>
<ul class="chatMenu">
    @foreach (var x in Model)
    {
        <li>
            @Ajax.ActionLink(x.email, "ShowChat", new { id = x.id }, new AjaxOptions
    {
        HttpMethod = "Post",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "nchat"
    })
    </li>

    }
</ul>

<div id="nchat">
</div>
