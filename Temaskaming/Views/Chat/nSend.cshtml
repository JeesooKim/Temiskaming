@model Temiskaming.Models.chatSendModel
@{
    Layout = null;
}

@using (Ajax.BeginForm("nSend", "Chat", new { file = ViewBag.File }, new AjaxOptions
{
    HttpMethod = "Post",
    OnSuccess = "$('#message').val('')"

}, new { @id = "fMessage" }))
{
    @Html.TextBoxFor(Model => Model.message)
    <input type="submit" id="send" name="send" value="Send" />
}


