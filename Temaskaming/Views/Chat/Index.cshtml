
<div id="chat">
    @using (Ajax.BeginForm("Chat", "Chat", FormMethod.Post, new AjaxOptions
    {
        HttpMethod = "Post",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "chat"
    }))
    {
        @Html.Label("Please enter valid email to chat: ")<br />
        @Html.TextBox("email")<br />
        <input type="submit" value="Enter Chat" />
    }
    
</div>
@Scripts.Render("~/bundles/jqueryval")