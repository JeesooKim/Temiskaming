@model Temiskaming.Models.chatModel
   @{
       Layout = null;
   }       
           
    @using (Ajax.BeginForm("Chat", "Chat", FormMethod.Post, new AjaxOptions
    {
        HttpMethod = "Post",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "chat"
    }))
    {
        @Html.Label("Please enter valid email to chat: ")<br />
        @Html.TextBoxFor(x => x.email)<br />
        <input type="submit" id="enter" value="Enter Chat" />
    }

@ViewBag.Error
             
