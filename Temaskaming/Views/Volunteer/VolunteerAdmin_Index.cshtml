@model IEnumerable<Temiskaming.Models.volunteer_opportunity>
@{
    ViewBag.Title = "Volunteer_Admin";
}

<h2>Volunteer Opportunities - Admin Index</h2>

@Html.ActionLink("To Volunteers List", "VolunteerAdmin_volIndex", "Volunteer")&nbsp; | &nbsp;
<hr />
@Html.ActionLink("Insert a New Volunteer Opportunity", "Admin_oppInsert", "Volunteer")
<br /><br />

<table id="opportunityTable" border="1">
    <thead>
        <tr>
            <th>Name </th>
            <th>Regular</th>
            <th>Date </th>
            <th>Day of Week </th>
            <th>Start </th>
            <th>End </th>
            <th>Location</th>
            <th>Detail</th>
            <th>Option </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.o_name, "Admin_oppDetails", new { id = item.o_id })</td>
                @*<td>
                    @Ajax.ActionLink(item.o_name, "_Admin_oppDetails", "volunteer", new { id = item.o_id }, new AjaxOptions
                    {
                        HttpMethod = "Post",
                        UpdateTargetId = "oppDetails",
                        InsertionMode = InsertionMode.Replace
                    })
                                </td>*@
                <td>
                    @{
            if (item.o_regular == true)
            { <text> Yes </text>}
            else
            { <text>No, Occasional/Special </text>}
                    }
                </td>
                <td>
                    @{
            if (item.o_date.HasValue)
            {
                @item.o_date.Value.ToShortDateString();
            }
            else
            {
                <text>N/A</text>
            }
                    }

                </td>
                <td>@item.o_day</td>
                <td>@item.o_start</td>
                <td>@item.o_end</td>
                <td>@item.o_location</td>
                <td>@item.o_description</td>
                <td>
                    @Html.ActionLink("Update", "Admin_oppUpdate", new { id = item.o_id }) |
                    @Html.ActionLink("Delete", "Admin_oppDelete", new { id = item.o_id })
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div id="oppDetails"></div>

