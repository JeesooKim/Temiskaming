@model Temiskaming.Models.volunteer_opportunity

<h2>Admin - Details of the Volunteer Opportunity : @Html.DisplayFor(x => x.o_name)</h2>

<table>
    <tr>
        <td>Date:</td>
        <td>@Html.DisplayFor(x => x.o_date)</td>
    </tr>
    <tr>
        <td>Day:</td>
        <td>@Html.DisplayFor(x => x.o_day)</td>
    </tr>
    <tr>
        <td>Start Time:</td>
        <td>@Html.DisplayFor(x => x.o_start)</td>
    </tr>
    <tr>
        <td>End Time:</td>
        <td>@Html.DisplayFor(x => x.o_end)</td>
    </tr>
    <tr>
        <td>Location:</td>
        <td>@Html.DisplayFor(x => x.o_location)</td>
    </tr>
    <tr>
        <td>Description:</td>
        <td>@Html.DisplayFor(x => x.o_description)</td>
    </tr>
</table>

<p>@Html.ActionLink("Collapse Details", "VolunteerAdmin_Index", "Volunteer")</p>

